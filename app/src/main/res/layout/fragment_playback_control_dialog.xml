<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/playbackSpeedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/playback_speed"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingBottom="8dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/playbackSpeedSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/playback_speed"
        android:stepSize="5"
        android:valueFrom="5"
        android:valueTo="20"
        app:labelBehavior="floating" />

    <TextView
        android:id="@+id/playbackPitchLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/playback_pitch"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingBottom="8dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/playbackPitchSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/playback_pitch"
        android:stepSize="5"
        android:valueFrom="5"
        android:valueTo="20"
        app:labelBehavior="floating" />

</LinearLayout>
